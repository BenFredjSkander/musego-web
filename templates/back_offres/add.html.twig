{{ include('partials/main.html.twig') }}
{% form_theme form 'bootstrap_5_horizontal_layout.html.twig' %}

<head>

    {{ include('partials/title-meta.html.twig', {title: 'Datatables'}) }}

    {{ include('partials/head-css.html.twig') }}

</head>
{{ include('partials/body.html.twig') }}


<body>
<!-- Begin page -->
<div id="layout-wrapper">

    {{ include('partials/menu.html.twig') }}

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                {{ include('partials/page-title.html.twig', {pagetitle: 'Offres', title: 'Ajout offre'}) }}


                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                {{ form_start(form) }}
                                {{ form_row(form.type) }}
                                {{ form_row(form.prix) }}
                                {{ form_row(form.promotion) }}
                                {{ form_row(form.image) }}
                                {% if form.image is defined and form.image is not null %}
                                    <img id="blah" src="{{ form.vars.value.image }}" alt=""
                                         class="img img-responsive img-preview thumbnail" height="100px" width="100px"/>
                                {% endif %}
                                {{ form_row(form.dateDebut) }}
                                {{ form_row(form.dateFin) }}
                                {{ form_row(form.description) }}



                                {{ form_row(form.enregistrer,{'label':'Ajouter'}) }}

                                {{ form_end(form) }}

                            </div>

                        </div>
                    </div>
                </div> <!-- end col -->
            </div>
            <!-- end row -->


        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->


    {{ include('partials/footer.html.twig') }}
</div>
<!-- end main content-->


<!-- End Page-content -->


{{ include('partials/footer.html.twig') }}
<!-- end main content-->


<!-- END layout-wrapper -->

{{ include('partials/right-sidebar.html.twig') }}

{{ include('partials/vendor-scripts.html.twig') }}


<!-- App js -->
<script src="{{ asset('/js/app.js') }}"></script>


</body>