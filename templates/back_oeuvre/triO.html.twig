                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-inline float-md-end mb-3">
                                            <div class="search-box ms-2">
                                                <div class="position-relative">


                                                    <form id="search-form"
                                                          action="{{ path('app_back_oeuvres_oeuvresSearch') }}"
                                                          method="GET">
                                                        <label for="search-input"
                                                               class="visually-hidden">Rechercher</label>
                                                        <div class="input-group">
                                                            <div class="input-group-text mdi mdi-magnify"></div>
                                                            <input type="text" class="form-control" id="search-input"
                                                                   name="query" placeholder="Rechercher...">
                                                        </div>
                                                    </form>
                                                    <div id="search-results"></div>


                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                                <!-- end row -->
                                <div class="table-responsive mb-4" id="oeuvres-list">


                                    <table class="table table-centered table-nowrap mb-0">
                                        <thead>
                                        <tr>
                                            <th>Titre</th>
                                            <th>Date de cr√©ation</th>
                                            <th>Categorie</th>
                                            <th>Description</th>
                                            <th>Lieu de conservation</th>
                                            <th>Image</th>
                                            <th>Artiste</th>
                                            <th scope="col" style="width: 200px;">Action</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for oeuvre in oeuvres %}

                                            <tr class="search-result">
                                                <td>{{ oeuvre.titre }}</td>
                                                <td>{{ oeuvre.dateCreation|date('d/m/Y') }}</td>
                                                <td>{{ oeuvre.idCategorie.nom }}</td>
                                                <td>{{ oeuvre.description }}</td>
                                                <td>{{ oeuvre.lieuConservation }}</td>
                                                <td><img src="{{ asset(oeuvre.image) }}" alt="{{ oeuvre.titre }}"
                                                         width="100" height="100"></td>
                                                <td>{{ oeuvre.idArtiste.nom }}</td>

                                                <td>
                                                    <ul class="list-inline mb-0">
                                                        <li class="list-inline-item">
                                                            <a href="{{ path('app_back_oeuvres_update', {'id':oeuvre.id}) }}"
                                                               class="px-2 text-primary"><i
                                                                        class="uil uil-pen font-size-18"></i></a>
                                                        </li>
                                                        <li class="list-inline-item">
                                                            <a href="{{ path('app_back_oeuvres_delete', {'id':oeuvre.id}) }}"
                                                               class="px-2 text-danger"><i
                                                                        class="uil uil-trash-alt font-size-18"></i></a>
                                                        </li>
                                                        <li class="list-inline-item dropdown">
                                                            <a class="text-muted dropdown-toggle font-size-18 px-2"
                                                               href="#"
                                                               role="button" data-bs-toggle="dropdown"
                                                               aria-haspopup="true">
                                                                <i class="uil uil-ellipsis-v"></i>
                                                            </a>

                                                            <div class="dropdown-menu dropdown-menu-end">
                                                                <a class="dropdown-item" href="#">Action</a>
                                                                <a class="dropdown-item" href="#">Another action</a>
                                                                <a class="dropdown-item" href="#">Something else
                                                                    here</a>
                                                            </div>
                                                        </li>
                                                    </ul>
                                                </td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                        <tbody id="searchtab">
                                        </tbody>
                                    </table>
                                </div>
                                <div class="row mt-4">
                                    <div class="col-sm-6">
                                        <div>
                                            <p class="mb-sm-0">Showing 1 to 10 of 12 entries</p>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="float-sm-end">
                                            <ul class="pagination mb-sm-0">
                                                <li class="page-item disabled">
                                                    <a href="#" class="page-link"><i
                                                                class="mdi mdi-chevron-left"></i></a>
                                                </li>
                                                <li class="page-item">
