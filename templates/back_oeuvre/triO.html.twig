    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                {{ include('partials/page-title.html.twig', {pagetitle: 'Contacts', title: 'Liste des oeuvres'}) }}

                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">


                            <div class="card-body">
                                <div class="row mb-2" id="oeuvres-tri">

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <a href="{{ path('app_back_oeuvres_add') }}"
                                               class="btn btn-success waves-effect waves-light"><i
                                                        class="mdi mdi-plus me-2"></i> Ajouter</a>
                                            <a href="{{ path('app_back_oeuvres_triOeuvresT') }}?colonne=titre&sens=ASC"
