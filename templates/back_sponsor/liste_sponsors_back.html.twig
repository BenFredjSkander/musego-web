{{ include('partials/main.html.twig') }}

<head>

    {{ include('partials/title-meta.html.twig', {title: 'Datatables'}) }}

    <!-- DataTables -->
    <link href="/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css"/>
    <link href="/libs/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css"/>

    <!-- Responsive datatable examples -->
    <link href="/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet"
          type="text/css"/>

    {{ include('partials/head-css.html.twig') }}

</head>

{{ include('partials/body.html.twig') }}

<!-- Begin page -->
<div id="layout-wrapper">

    {{ include('partials/menu.html.twig') }}

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                {{ include('partials/page-title.html.twig', {pagetitle: 'Tables', title: 'Liste des Sponsors'}) }}


                <!------------------------------------------ debut partie sponsors----------------------------------------->


                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">

                                <a href="{{ path('app_back_sponsor_add') }}"
                                   class="btn btn-success waves-effect waves-light"><i
                                            class="mdi mdi-plus me-2"></i> Ajouter sponsor</a>
                                <hr>

                                <table id="datatable-buttons"
                                       class="table table-striped table-bordered dt-responsive nowrap"
                                       style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                    <thead>
                                    <tr>

                                        <th>photo</th>
                                        <th>nom</th>
                                        <th>capacite financiere</th>
                                        <th>evenement sponsoris√©</th>


                                        <th>supprimer</th>
                                        <th>modifier</th>


                                    </tr>

                                    </thead>


                                    <tbody>
                                    {% for sponsor in sponsors %}
                                        <tr>
                                            <td><img src="{{ sponsor.photo }}" width="50" height="40"></td>
                                            <td>{{ sponsor.nom }}</td>
                                            <td>{{ sponsor.capaciteFin }}</td>
                                            <td>{{ sponsor.idEvenement.nom }}</td>
                                            <td>
                                                <a type="button"
                                                   class="btn btn-danger btn-rounded waves-effect waves-light"
                                                   href="{{ path ('app_back_sponsor_remove',{'id':sponsor.id}) }}">supprimer</a>

                                            </td>
                                            <td>
                                                <a type="button"
                                                   class="btn btn-warning btn-soft-warning waves-effect waves-light"
                                                   href="{{ path ('app_back_sponsor_update',{'id':sponsor.id}) }}">modifier</a>
                                            </td>


                                        </tr>
                                    {% endfor %}
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->


                <!----------------------------------------fin  partie sponsors --------------------------->


            </div> <!-- container-fluid -->
        </div>
        <!-- End Page-content -->


        {{ include('partials/footer.html.twig') }}
    </div>
    <!-- end main content-->

</div>
<!-- END layout-wrapper -->

