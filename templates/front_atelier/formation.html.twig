{% extends 'basefront.html.twig' %}
{% import "front-breadcrumb.html.twig" as breadcrumb %}

{% block title %}Musegoo{% endblock %}

{% block body %}

    <div class="boxed_wrapper">

        <div class="preloader"></div>

        <!--Start main header Style4-->
        {% include 'front-header.html.twig' %}

        <!--Start breadcrumb area-->
        {{ breadcrumb.input('images/breadcrumb/breadcrumb-2.jpg', 'Formation', 'Atelier') }}
        <!--End breadcrumb area-->

        <!--Start Galerie Area-->
        <section class="gallery-area">
            <div class="container">
                <div class="sortable-masonry">
                    <!--Filter-->
                    <div class="filters text-center clearfix">
                        <ul class="filter-tabs filter-btns clearfix">
                            <li class="active filter" data-role="button" data-filter=".all">Atelier
                                de {{ atelier }}</li>
                        </ul>
                    </div>
                    <div class="row items-container clearfix">
                        <!--Start Single Art Box Style2-->
                        {% for f in list %}

                            <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 masonry-item all art insta">
                                <div class="single-art-box-style2 marbtm50" style="border: 2px solid #d5d7d8"
                                     onclick="openDetails('{{ path('app_front_formation_showDetail',{'id': f.id}) }}')">
                                    <a href="{{ path('app_front_formation_showDetail',{'id': f.id}) }}">
                                        <div class="text-holder">
                                            <h3>
                                                <a href="{{ path('app_front_formation_showDetail',{'id': f.id}) }}">{{ f.nom }}</a>
                                            </h3>
                                            <span>{{ f.niveau }}</span><br>
                                            <span> {{ f.dateDebut|format_date }}-{{ f.dateFin|format_date }}</span><br>
                                            <span><button>Participer</button></span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                        <!--End Single Art Box Style2-->
                    </div>
                </div>
            </div>
        </section>
        <!--End Gallery Area-->


        <!--Start footer Style2 area-->
        {% include 'front-footer.html.twig' %}
        <!--End footer Style2 area-->


    </div>


    <button class="scroll-top scroll-to-target" data-target="html">
        <span class="icon-angle"></span>
    </button>


{% endblock %}
{% block customJS %}
    <script>
        function openDetails(link) {
            location.href = link
        }
    </script>
{% endblock %}